    <script>
        const locateBtn = document.getElementById('locateCarBtn');
        const payParkingBtn = document.getElementById('payParkingBtn');
        const minimapModal = document.getElementById('minimapModal');
        const paymentModal = document.getElementById('paymentModal');
        const parkingStatusSpan = document.getElementById('parkingStatusText');
        
        // Essential functions for modal control
        function showModal(id) {
            document.getElementById(id).classList.add('show');
        }

        function hideModal(id) {
            document.getElementById(id).classList.remove('show');
        }

        // --- Function: Shows Success State Instantly ---
        function showPaymentSuccess() {
            // Update the main page status text to reflect payment status
            const cardStatusSpan = document.querySelector('.parking-status span');
            if (cardStatusSpan) {
                cardStatusSpan.textContent = 'Paid (Exit Free)';
                cardStatusSpan.style.color = '#20C20E'; // Green color for Paid status
            }

            // Show the modal which is already populated with success content
            showModal('paymentModal');
        }

        // Event listener for Locate Car
        locateBtn.addEventListener('click', () => {
            showModal('minimapModal');
        });

        // Event listener for Pay for Parking
        payParkingBtn.addEventListener('click', () => {
            showPaymentSuccess();
        });
        
        // Optional: Close modal if clicking outside the popup
        minimapModal.addEventListener('click', (event) => {
            if (event.target === minimapModal) {
                hideModal('minimapModal');
            }
        });
        
        // Optional: Close payment modal if clicking outside
        paymentModal.addEventListener('click', (event) => {
            if (event.target === paymentModal) {
                hideModal('paymentModal');
            }
        });
    </script>
